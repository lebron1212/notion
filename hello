<html> 
<head>
    <title>Greeting Message using JavaScript</title> 
</head>
<body>
    <label id="lblGreetings"></label>
</body>

<script>
    var myDate = new Date();
    var hrs = myDate.getHours();

    var greet;

    if (hrs < 12)
        greet = 'Good morning, Ethan.';
    else if (hrs >= 12 && hrs <= 17)
        greet = 'Good afternoon, Ethan.';
    else if (hrs >= 17 && hrs <= 24)
        greet = 'Good evening, Ethan.';

    document.getElementById('lblGreetings').innerHTML =
        '<b>' + greet + '</b> This is where it all begins.';
</script> 
</html>
